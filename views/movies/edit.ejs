<% include ../partials/header %>

  <div class="row justify-content-center">
    <div class="col-lg-4 col-md-6 col-sm-8">
      <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
        <legend>Edit
          <%= movie.name %>
        </legend>
        <div class="form-group">
          <label for="name">Name *</label>
          <input class="form-control" id="name" type="text" name="movie[name]" value="<%= movie.name %>" autofocus required>
        </div>
        <div class="form-group">
          <label for="description">Description *</label>
          <textarea name="movie[description]" id="description" cols="36" rows="5" required></textarea>
        </div>
        <div class="form-group">
          <label for="rating">Rating *</label>
          <input class="form-control" id="rating" type="number" name="movie[rating]" value="<%= movie.rating %>" max="5" min="1" step="1" required>
        </div>
        <div class="form-group">
          <label for="image">Image *</label>
          <input class="form-control" id="image" type="text" name="movie[image]" value="<%= movie.image %>" required>
        </div>
        <h6 class="text-muted">* Required</h6>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
        </div>
      </form>
      <a class="btn btn-primary btn-sm" href="/movies/<%= movie._id %>">Back</a>
    </div>
  </div>

  <% include ../partials/footer %>