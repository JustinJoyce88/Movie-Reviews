<% include ./partials/header %>

<div class="row justify-content-center">
  <div class="col-lg-4 col-md-6 col-sm-8">
    <form action="/forgot" method="POST">
      <legend>Forgot Password</legend>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="email" name="email" placeholder="john.doe@gmail.com" autofocus>
      </div>
      <div class="form-group">
      <input class="btn btn-lg btn-primary btn-block" type="submit" value="Reset Password">
      </div>
      <a class="btn btn-sm btn-primary" href="/login">Back</a>
    </form>
  </div>
</div>

